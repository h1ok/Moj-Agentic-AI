# ============================================================================
# كنق الاتمته - Chatbot Configuration
# ============================================================================

# Application Settings
APP_NAME=كنق الاتمته - Chatbot
VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=chatbot_db

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=chatbot_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Configuration (REQUIRED)
# Generate JWT_SECRET_KEY with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# Generate ENCRYPTION_KEY with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Generate secure keys using the commands provided above
# 4. Never commit .env file to version control
# 5. Keep your .env file secure and never share it
# ============================================================================
